{
  "name": "puck-conversation-documents",
  "displayName": "Puck - Conversation Documents",
  "description": "A portable document format for GPT-4 chat conversations",
  "publisher": "NextBlock.ai",
  "icon": "./icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextblock-ai/conversation-documents.git",
    "branch": "main"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Puck Conversation Documents Settings",
      "properties": {
        "puck.conversationDocuments.settings": {
          "type": "number",
          "default": 0.7,
          "description": "Sample setting"
        }
      }
    },
    "commands": [
      {
        "command": "puck.conversationDocuments.openChatDocumentView",
        "title": "Puck - Open Chat Document"
      }
    ],
    "customEditors": [
      {
        "viewType": "chatEditor",
        "displayName": "Conversation Editor",
        "selector": [
          {
            "filenamePattern": "*.chat"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "extensionDependencies": [
    "NextBlock.puck-core"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "font-awesome": "^4.7.0"
  }
}
